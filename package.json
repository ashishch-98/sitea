{
  "name": "sitea",
  "description": "Application utilizing Sitecore JavaScript Services and Next.js",
  "version": "0.1.0",
  "private": true,
  "config": {
    "appName": "sitea",
    "rootPlaceholders": [
      "jss-main"
    ],
    "sitecoreConfigPath": "/App_Config/Include/zzz",
    "graphQLEndpointPath": "/sitecore/api/graph/edge",
    "language": "en",
    "templates": [
      "nextjs",
      "nextjs-multisite"
    ]
  },
  "author": {
    "name": "Sitecore Corporation",
    "url": "https://jss.sitecore.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sitecore/jss.git"
  },
  "bugs": {
    "url": "https://github.com/sitecore/jss/issues"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@sitecore-cloudsdk/personalize": "^0.5.4",
    "@sitecore-cloudsdk/search": "^0.5.4",
    "@sitecore-feaas/clientside": "^0.6.2",
    "@sitecore-jss/sitecore-jss-forms": "^22.9.0",
    "@sitecore-jss/sitecore-jss-nextjs": "~22.9.0",
    "@sitecore-jss/sitecore-jss-react-forms": "^22.9.0",
    "flowbite": "^2.5.1",
    "flowbite-react": "^0.10.1",
    "next": "^15.4.6",
    "next-localization": "^0.12.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-slick": "^0.30.2",
    "sharp": "0.34.3",
    "slick-carousel": "^1.8.1"
  },
  "devDependencies": {
    "@sitecore-jss/sitecore-jss-cli": "~22.9.0",
    "@sitecore-jss/sitecore-jss-dev-tools": "~22.9.0",
    "@types/node": "^22.9.0",
    "@types/react": "^19.1.7",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "chalk": "~4.1.2",
    "chokidar": "~4.0.3",
    "constant-case": "^3.0.4",
    "cross-env": "~10.0.0",
    "dotenv-cli": "^9.0.0",
    "dotenv-flow": "^4.1.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^13.1.5",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-yaml": "^0.5.0",
    "npm-run-all": "~4.1.5",
    "postcss": "^8",
    "prettier": "^2.8.3",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "~5.4.0"
  },
  "scripts": {
    "jss": "jss",
    "lint": "eslint ./src/**/*.tsx ./src/**/*.ts ./scripts/**/*.ts",
    "bootstrap": "ts-node --require dotenv-flow/config --project tsconfig.scripts.json scripts/bootstrap.ts",
    "build": "cross-env NODE_ENV=production npm-run-all --serial bootstrap next:build",
    "next:build": "next build",
    "next:dev": "cross-env NODE_OPTIONS='--inspect' next dev",
    "next:start": "next start",
    "scaffold": "ts-node --project tsconfig.scripts.json scripts/scaffold-component/index.ts",
    "start:connected": "cross-env NODE_ENV=development NODE_EXTRA_CA_CERTS=\"C:/Users/ashish.chinchkhede/Documents/Certs/sc104.local.cer\" npm-run-all --serial bootstrap --parallel next:dev start:watch-components",
    "start:production": "cross-env-shell NODE_ENV=production npm-run-all --serial bootstrap next:build next:start",
    "start:watch-components": "ts-node --project tsconfig.scripts.json scripts/generate-component-builder/index.ts --watch",
    "install-pre-push-hook": "ts-node --project tsconfig.scripts.json ./scripts/install-pre-push-hook.ts",
    "sc:login": "dotenv -e .env.local -- cross-env-shell  dotnet sitecore login --authority $SITECORE_ID_HOST --cm $SITECORE_API_HOST --allow-write true",
    "sc:pull": "dotnet sitecore ser pull",
    "sc:push": "dotnet sitecore ser push",
    "init": "jss deploy config && npm install && npm run sc:login && npm run sc:push && npm run start:connected"
  }
}
